<uc:BaseUserControl x:Class="ShopView.UserControls.OwnerUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:uc="clr-namespace:ShopView.UserControls.Base"
             xmlns:local="clr-namespace:ShopView.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="OwnerIdTxtB" Text="{Binding Owner.Id}"/>
        <TextBlock x:Name="OwnerFirstnameTxtB" Text="{Binding Owner.Firstname}"/>
        <TextBlock x:Name="OwnerLastnameTxtB" Text="{Binding Owner.Lastname}"/>
        <TextBlock x:Name="OwnerAddressTxtB" Text="{Binding Owner.Address}"/>
    </Grid>
</uc:BaseUserControl>
