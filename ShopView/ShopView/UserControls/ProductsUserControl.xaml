<uc:BaseUserControl x:Class="ShopView.UserControls.ProductsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:uc="clr-namespace:ShopView.UserControls.Base"
             xmlns:local="clr-namespace:ShopView.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="ProductsIdTxtB" Text="{Binding Products.Id}"/>
        <TextBlock x:Name="ProductsNameTxtB" Text="{Binding Products.Name}"/>
        <TextBlock x:Name="ProductsProceTxtB" Text="{Binding Products.Price}"/>
        <TextBlock x:Name="ProductsCategoryTxtB" Text="{Binding Products.Category}"/>
    </Grid>
</uc:BaseUserControl>
